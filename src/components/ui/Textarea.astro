---
interface Props {
  name: string;
  label?: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
  value?: string;
  class?: string;
}

const {
  name,
  label,
  placeholder,
  required = false,
  rows = 4,
  value = '',
  class: className = ''
} = Astro.props;
---

<div class={`space-y-2 ${className}`}>
  {label && (
    <label for={name} class="block text-sm font-medium text-gray-700">
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <textarea
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    rows={rows}
    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 resize-vertical"
  >{value}</textarea>
</div>
