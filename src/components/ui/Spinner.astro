---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  size = 'md',
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4 border-2',
  md: 'w-8 h-8 border-3',
  lg: 'w-12 h-12 border-4'
};
---

<div class={`inline-block ${className}`}>
  <div
    class={`${sizeClasses[size]} border-indigo-600 border-t-transparent rounded-full animate-spin`}
    role="status"
    aria-label="Loading"
  >
  </div>
</div>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 0.8s linear infinite;
  }
</style>
